# ==========================================
# 노인 복지 챗봇 환경 설정 파일
# ==========================================
# 이 파일을 복사해서 .env 파일을 만들고 본인의 환경에 맞게 수정하세요
# 명령어: cp .env.example .env (Linux/Mac)
#         copy .env.example .env (Windows)

# ============== OpenAI API 설정 ==============
# OpenAI API 키 (필수)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI 모델 설정
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMB_MODEL=text-embedding-ada-002
TEMPERATURE=0.1
MAX_TOKENS=1000

# ============== RAG 시스템 설정 ==============
# 청킹 설정
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 검색 설정
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ============== 데이터 경로 설정 ==============
# 프로젝트 루트 경로 (선택 - 비어있으면 자동 감지)
# 예시: C:/Users/yourname/Desktop/playdata/Workspace/팀프로젝트4/4th-project_mvp
PROJECT_ROOT=

# 메인 데이터 디렉토리 (복지로 전체 데이터)
# 상대 경로: PROJECT_ROOT 기준
# 절대 경로: 전체 경로 입력
MAIN_DATA_DIR=../data/복지로

# 검증용 데이터 디렉토리 (복지로 샘플 데이터)
# 상대 경로: PROJECT_ROOT 기준
# 절대 경로: 전체 경로 입력
VALIDATION_DATA_DIR=../data/복지로 - 복사본

# ChromaDB 저장 경로 (상대 경로 - elderly_rag_chatbot 기준)
CHROMA_DB_ROOT=chroma_db
MAIN_CHROMA_DB_DIR=chroma_db/main
VALIDATION_CHROMA_DB_DIR=chroma_db/validation

# ============== Django 설정 ==============
# Django Secret Key (선택 - 비어있으면 settings.py의 기본값 사용)
SECRET_KEY=

# Debug 모드 (True/False)
DEBUG=True

# 허용 호스트 (콤마로 구분)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============== 로깅 설정 ==============
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 로그 파일 경로 (선택 - 비어있으면 콘솔에만 출력)
LOG_FILE=
